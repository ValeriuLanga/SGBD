<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>

  </startup>

  <connectionStrings>
    <add name="connectionString" connectionString = "VLANGA-LPT\\SQLEXPRESS; Initial Catalog = OutdoorGear; Integrated Security = True"/>
  </connectionStrings>

  
  <appSettings>
    <add key="ParentSelectCommand" value="SELECT * FROM HikingBoots"/>
	
    <add key="ParentId" value="ParentId"/>
	
    <add key="ChildSelectCommand" value="SELECT * FROM Crampons"/>
	
    <add key="ChildInsertCommand" value="INSERT INTO Crampons (HBId, CrBrand, Quantity, Size, Price) VALUES(@HikingBootsId, @brand, @quantity, @size, @price)"/>
									
    <add key="ChildUpdateCommand" value="UPDATE Crampons SET CrBrand=@brand, Quantity=@quantity, Size=@size, Price=@price WHERE CrId=@id"/>
	
    <add key="ChildDeleteCommand" value="DELETE FROM Crampons WHERE CrId = @id"/>
  </appSettings>

</configuration>
